{
  "compilerOptions": {
    "target": "es2019",
    "module": "ESNext",
    "lib": ["DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "declaration": true
  },
  "include": ["./src/**/*"],
  "exclude": ["dist"]
}
